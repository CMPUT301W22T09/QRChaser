<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    tools:context=".player.profile.PlayerProfileActivity">

    <Button
        android:id="@+id/button_delete"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:visibility="gone"
        android:text="Delete This Player" />

    <Button
        android:id="@+id/button_back"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Back" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0sp"
        android:layout_weight="1"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/desired_player_nickname"
            android:layout_width="0sp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:text="Nickname"
            android:padding="20dp"
            android:gravity="left|center"
            android:fontFamily="sans-serif"
            android:textColor="#051367"
            android:textSize="20sp"/>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0sp"
        android:layout_weight="8"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal" >

            <TextView
                android:id="@+id/num_qr_1"
                android:layout_width="0dp"
                android:layout_weight="2"
                android:layout_height="wrap_content"
                android:padding="20dp"
                android:text="Number of QR codes owned: "
                android:gravity="left|center"
                android:fontFamily="sans-serif"
                android:textColor="#051367"
                android:textSize="15sp">
            </TextView>

            <TextView
                android:id="@+id/num_qr_2"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="wrap_content"
                android:padding="20dp"
                android:text=""
                android:gravity="left|center"
                android:fontFamily="sans-serif"
                android:textColor="#051367"
                android:textSize="15sp">
            </TextView>

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal" >

            <TextView
                android:id="@+id/total_score_1"
                android:layout_width="0dp"
                android:layout_weight="2"
                android:layout_height="wrap_content"
                android:padding="20dp"
                android:text="Total score: "
                android:gravity="left|center"
                android:fontFamily="sans-serif"
                android:textColor="#051367"
                android:textSize="15sp">
            </TextView>

            <TextView
                android:id="@+id/total_score_2"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="wrap_content"
                android:padding="20dp"
                android:text=""
                android:textSize="15sp"
                android:gravity="left|center"
                android:fontFamily="sans-serif"
                android:textColor="#051367">
            </TextView>
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal" >

            <TextView
                android:id="@+id/single_score_1"
                android:layout_width="0dp"
                android:layout_weight="2"
                android:layout_height="wrap_content"
                android:padding="20dp"
                android:text="Highest scoring QR code: "
                android:textSize="15sp"
                android:gravity="left|center"
                android:fontFamily="sans-serif"
                android:textColor="#051367">
            </TextView>

            <TextView
                android:id="@+id/single_score_2"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="wrap_content"
                android:padding="20dp"
                android:text=""
                android:textSize="15sp"
                android:gravity="left|center"
                android:fontFamily="sans-serif"
                android:textColor="#051367">
            </TextView>
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal" >

            <TextView
                android:id="@+id/num_qr_ranking_1"
                android:layout_width="0dp"
                android:layout_weight="2"
                android:layout_height="wrap_content"
                android:padding="20dp"
                android:text="Number of scanned QR codes ranking: "
                android:textSize="15sp"
                android:gravity="left|center"
                android:fontFamily="sans-serif"
                android:textColor="#051367">
            </TextView>

            <TextView
                android:id="@+id/num_qr_ranking_2"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="wrap_content"
                android:padding="20dp"
                android:text=""
                android:textSize="15sp"
                android:gravity="left|center"
                android:fontFamily="sans-serif"
                android:textColor="#051367">
            </TextView>
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal" >

            <TextView
                android:id="@+id/total_score_ranking_1"
                android:layout_width="0dp"
                android:layout_weight="2"
                android:layout_height="wrap_content"
                android:padding="20dp"
                android:text="Total score ranking: "
                android:textSize="15sp"
                android:gravity="left|center"
                android:fontFamily="sans-serif"
                android:textColor="#051367">
            </TextView>

            <TextView
                android:id="@+id/total_score_ranking_2"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="wrap_content"
                android:padding="20dp"
                android:text=""
                android:textSize="15sp"
                android:gravity="left|center"
                android:fontFamily="sans-serif"
                android:textColor="#051367">
            </TextView>
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal" >

            <TextView
                android:id="@+id/single_score_ranking_1"
                android:layout_width="0dp"
                android:layout_weight="2"
                android:layout_height="wrap_content"
                android:padding="20dp"
                android:text="Single highest scoring QR ranking: "
                android:textSize="15sp"
                android:gravity="left|center"
                android:fontFamily="sans-serif"
                android:textColor="#051367">
            </TextView>

            <TextView
                android:id="@+id/single_score_ranking_2"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="wrap_content"
                android:padding="20dp"
                android:text=""
                android:textSize="15sp"
                android:gravity="left|center"
                android:fontFamily="sans-serif"
                android:textColor="#051367">
            </TextView>
        </LinearLayout>
    </LinearLayout>
</LinearLayout>